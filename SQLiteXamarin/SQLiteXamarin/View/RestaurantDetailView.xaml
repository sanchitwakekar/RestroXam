<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SQLiteXamarin.View.RestaurantDetailView">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter Restaurant Name"
                   Text="{Binding RestaurantName}" />

            <Entry
                Placeholder="Enter Restaurant Area"
                IsPassword="True"
                Text="{Binding RestaurantArea}"
                />

            <Button
                Text="REMOVE"  
                HorizontalOptions="FillAndExpand"
                Command="{Binding RemoveRestaurant}"  />
            
            <Button
                Text="UPDATE"  
                HorizontalOptions="FillAndExpand"
                Command="{Binding UpdateRestaurant}"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>